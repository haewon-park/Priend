<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".EntryActivity" >

    <ImageView
        android:id="@+id/entry_image_view_icon"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:src="@drawable/ic_priend"
        android:tint="@color/secondaryDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entry_text_view_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblegum_sans_regular"
        android:text="@string/app_name"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/entry_image_view_icon"
        app:layout_constraintStart_toStartOf="@+id/entry_image_view_icon"
        app:layout_constraintTop_toBottomOf="@+id/entry_image_view_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>