<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/accountsettings_image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/accountsettings_image_View_account"
        android:tint="@color/secondaryDarkColor"
        android:layout_width="115dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_account" />

    <TextView
        android:id="@+id/accountsettings_text_view_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Account"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/accountsetting_scrollview_email"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/accountsettings_Linear_Layout_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accountsettings_text_view_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="naver.com"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/accountsettings_text_view_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:text="이름"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/accountsettings_image_view_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/no_color"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/accountsetting_scrollview_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/accountsettings_Linear_Layout_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accountsettings_image_view_account"
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:tint="@color/secondaryDarkColor"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_logout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accountsettings_item_text_view_Logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/accountsettings_item_text_view_subLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Logout and go to login page." />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountsettings_Linear_Layout_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accountsettings_image_view_password"
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:tint="@color/secondaryDarkColor"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_key" />

                <LinearLayout
                    android:id="@+id/settings_item_Linear_Layout_Second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accountsettings_item_text_view_reset_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset password"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/accountsettings_item_text_view_subpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Request an email to reset my password." />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountsettings_Linear_Layout_delete"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accountsettings_image_view_delete"
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:tint="@color/secondaryDarkColor"
                    android:src="@drawable/ic_out" />

                <LinearLayout
                    android:id="@+id/accountsettings_Linear_Layout_Second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accountsettings_text_view_delete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete account"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/accountsettings_text_view_subdelete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Delete my account pernamently." />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>