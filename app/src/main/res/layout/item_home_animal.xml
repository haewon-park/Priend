<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:paddingHorizontal="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/home_animal_image_view_sex"
        android:layout_width="21dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_animal_text_view_name"
        app:srcCompat="@drawable/ic_gender_male" />

    <TextView
        android:id="@+id/home_animal_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/home_animal_image_view_sex"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="[Name]" />

    <TextView
        android:id="@+id/home_animal_text_view_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/home_animal_text_view_name"
        app:layout_constraintStart_toEndOf="@+id/home_animal_text_view_name"
        tools:text="[Age][Unit]" />

    <TextView
        android:id="@+id/home_animal_text_view_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/home_animal_text_view_name"
        app:layout_constraintTop_toBottomOf="@+id/home_animal_text_view_name"
        tools:text="[Weight]Kg ([When])" />

    <ImageButton
        android:id="@+id/home_animal_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_create_black_18dp"
        android:tint="@color/grey_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_animal_text_view_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>