<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/settings_image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/settings_imageView"
        android:layout_width="115dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_settings"
        android:tint="@color/secondaryDarkColor" />

    <TextView
        android:id="@+id/settings_text_view_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Setting"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_item_Linear_Layout_Account"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings_image_view_account"
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_account"
                    android:tint="@color/secondaryDarkColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settings_item_text_view_Account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/settings_item_text_view_Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="User name" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_item_Linear_Layout_alert"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings_image_view_alert"
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_alert"
                    android:tint="@color/secondaryDarkColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:tint="@color/secondaryDarkColor">

                    <TextView
                        android:id="@+id/settings_item_text_view_Alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alert"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/settings_item_text_view_Push_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Push alert,Notification" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>